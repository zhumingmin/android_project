<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ly_fanhui_zhuce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/FanHui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:background="@drawable/fanhui" >
                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="返回"
                    android:textColor="#fff"
                    android:textSize="20dp" >
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="25sp" >
            </TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:background="@drawable/btn_bg"
                android:textColor="#fff" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ZhangHao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="请输入账号："
                android:textColor="#333333"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/TianXieZhangHao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789"
                android:hint="您的18位身份证号码"
                android:maxLength="18"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Xingming1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请输入姓名："
                android:textColor="#333333"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/TianXieXingming1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="您的姓名"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ShouJiHaoMa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请输入手机号码："
                android:textColor="#333333"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/TianXieShouJiHaoMa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789"
                android:hint="您的11位手机号码"
                android:maxLength="11"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/MiMa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请输入密码："
                android:textColor="#333333"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/TianXieMiMa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="6位包括字母和数字"
                android:maxLength="6"
                android:password="true"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/MiMa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请再次输入密码："
                android:textColor="#333333"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/TianXieMiMa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="6位包括字母和数字"
                android:maxLength="6"
                android:password="true"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/zhucewancheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape3"
            android:text="注册"
            android:textColor="#333333" >
        </Button>
    </LinearLayout>

</ScrollView>