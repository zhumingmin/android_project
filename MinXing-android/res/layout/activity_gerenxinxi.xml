<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ly_fanhui_gerenxinxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/FanHui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:background="@drawable/fanhui" >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="返回"
                android:textColor="#fff"
                android:textSize="20dp" >
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#fff"
            android:textSize="25sp" >
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/btn_bg"
            android:text=""
            android:textColor="#fff"
            android:textSize="20dp" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/grxx_xingming_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="姓名："
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/baojian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8FF" >
        </TextView>

        <EditText
            android:id="@+id/grxx_xingming_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/baojian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8FF" >
        </TextView>

        <TextView
            android:id="@+id/grxx_lianxifangshi_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="联系方式："
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/baojian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8FF" >
        </TextView>

        <EditText
            android:id="@+id/grxx_lianxifangshi_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:password="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/baojian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8FF" >
        </TextView>

        <TextView
            android:id="@+id/grxx_shenfenzhenghao_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="身份证号码："
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/baojian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8FF" >
        </TextView>

        <EditText
            android:id="@+id/grxx_shenfenzhenghao_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:password="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/baojian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8FF" >
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/grxx_chuansong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape3"
        android:text="NFC传送" >
    </Button>

    <Button
        android:id="@+id/shengcheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonshape3"
        android:text="生成二维码" />

    <ImageView
        android:id="@+id/erweima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="显示二维码图片" />

</LinearLayout>