            </LinearLayout>

            <TextView
                android:id="@+id/xianliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/layout_6"
                android:text="民兴闲聊"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_rss"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/layout_0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/tb_rss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/tb_rss" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/layout_0"
                android:text="RSS新闻"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_shezhi"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/layout_7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/tb_shezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/tb_shezhi" />
            </LinearLayout>

            <TextView
                android:id="@+id/shezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/layout_7"
                android:text="设置"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

</TableLayout>