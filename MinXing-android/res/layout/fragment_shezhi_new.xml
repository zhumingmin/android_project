<?xml version="1.0" encoding="UTF-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:stretchColumns="0" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp" >
    </TextView>

    <TableRow
        android:id="@+id/tr_gerenxinxi"
        android:background="@drawable/btn_bg" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_gerenxinxi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tb_user" >
            </ImageView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_gerenxinxi"
                android:text="村民张三"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/iv_gerenxinxi"
                android:layout_below="@id/name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv_gerenxinxi"
                android:text="联系方式："
                android:textColor="#fff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/iv_gerenxinxi"
                android:layout_below="@id/name"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/tel"
                android:text="15682215694"
                android:textColor="#fff"
                android:textSize="15dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/jiantou"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp" >
    </TextView>

    <TableRow
        android:id="@+id/tr_toupiao"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/tb_toupiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/tb_toupiao" />
            </LinearLayout>

            <TextView
                android:id="@+id/toupiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/layout_1"
                android:text="民意征集"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_xinxichaxun"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/layout_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/tb_xinxichaxun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/tb_xinxichaxun" />
            </LinearLayout>

            <TextView
                android:id="@+id/xinxichaxun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/layout_4"
                android:text="标签查询"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_chaxunjindu"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/layout_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/tb_chaxunjindu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/tb_chaxunjindu" />
            </LinearLayout>

            <TextView
                android:id="@+id/chaxunjindu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/layout_5"
                android:text="办理进度"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_tongxunlu"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/layout_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/tb_tongxunlu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/tb_tongxunlu" />
            </LinearLayout>

            <TextView
                android:id="@+id/tongxunlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/layout_5"
                android:text="民兴通讯"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_xianliao"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/layout_6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/tb_xianliao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
