<?xml version="1.0" encoding="UTF-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:stretchColumns="0" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ly_fanhui_shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/FanHui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:background="@drawable/fanhui" >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="返回"
                android:textColor="#fff"
                android:textSize="20dp" >
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="25sp" >
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/btn_bg"
            android:text=""
            android:textColor="#fff"
            android:textSize="20dp" >
        </Button>
    </LinearLayout>

    <TableRow android:background="#FFFFFF" >

        <Button
            android:id="@+id/shezhi_zhanghaoanquan"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:gravity="left|center"
            android:text="账号安全"
            android:textColor="#000000"
            android:textSize="20sp" >
        </Button>

        <ImageView
            android:id="@+id/ZhuCeJieMian"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TextView
        android:id="@+id/baojian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8FF" >
    </TextView>

    <TableRow android:background="#FFFFFF" >

        <Button
            android:id="@+id/shezhi_gengxin"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:gravity="left|center"
            android:text="检查更新"
            android:textColor="#000000"
            android:textSize="20sp" >
        </Button>

        <ImageView
            android:id="@+id/ZhuCeJieMian"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TextView
        android:id="@+id/baojian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8FF" >
    </TextView>

    <TableRow android:background="#FFFFFF" >

        <Button
            android:id="@+id/shezhi_bangzhu"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:gravity="left|center"
            android:text="帮助与反馈"
            android:textColor="#000000"
            android:textSize="20sp" >
        </Button>

        <ImageView
            android:id="@+id/ZhuCeJieMian"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TextView
        android:id="@+id/baojian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8FF" >
    </TextView>

    <TableRow android:background="#FFFFFF" >

        <Button
            android:id="@+id/shezhi_guanyu"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:gravity="left|center"
            android:text="关于民兴之家"
            android:textColor="#000000"
            android:textSize="20sp" >
        </Button>

        <ImageView
            android:id="@+id/ZhuCeJieMian"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou" />
    </TableRow>

    <TextView
        android:id="@+id/baojian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8FF" >
    </TextView>

    <TextView
        android:id="@+id/baojian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8FF" >
    </TextView>

    <Button
        android:id="@+id/zhuxiaodenglu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape2"
        android:gravity="center"
        android:text="注销登录"
        android:textColor="#FFFFFF"
        android:textSize="20sp" >
    </Button>

</TableLayout>