<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ly_tianxiehetong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/FanHuiShangYiYe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:background="@drawable/fanhui" >
                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="返回"
                    android:textColor="#fff"
                    android:textSize="20dp" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/caiwubaobiao"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="在线填写合同"
                android:textColor="#fff"
                android:textSize="25sp" >
            </TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:background="@drawable/btn_bg" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jiafang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="甲方："
                android:textColor="#000000"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/et_jiafang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/yifang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="乙方："
                android:textColor="#000000"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/et_yifang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/yuedingfeiyong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="约定费用："
                android:textColor="#000000"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/et_yuedingfeiyong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/qiandingnianxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="签订年限："
                android:textColor="#000000"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/et_qiandingnianxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/qitashuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="其他说明："
                android:textColor="#000000"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/baojian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8FF" >
            </TextView>

            <EditText
                android:id="@+id/et_qitashuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gongzheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="本合同最终解释权归民兴村村委所有。"
                android:textColor="#000000"
                android:textSize="15sp" >
            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/tijiaohetong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape3"
            android:onClick="postData"
            android:text="提交"
            android:textColor="#333333" >
        </Button>
    </LinearLayout>

</ScrollView>